   {
      "name":"xms",
      "image":"openlxp/openlxp-xms:latest",
      "cpu":2,
      "memory":512,
      "essential":true,
      "portMappings":[
         {
            "containerPort":8100,
            "hostPort":8100,
            "protocol":"tcp"
         }
      ],
      "environmentVariables":[
         {
           "REACT_APP_CONFIGURATION_API":"arn:aws:ssm:us-east-1:aws account:parameter/REACT_APP_CONFIGURATION_API",
