[
   {
      "name":"xds-ui",
      "image":"openlxp/openlxp-xds-ui:latest",
      "cpu":2,
      "memory":512,
      "essential":true,
      "portMappings":[
         {
            "containerPort":3000,
            "hostPort":3000,
            "protocol":"tcp"
         }
      ],
      "environmentVariables":[
         {
           "REACT_APP_CONFIGURATION_API":"arn:aws:ssm:us-east-1:var.aws_account:parameter/REACT_APP_CONFIGURATION_API",
           "REACT_APP_ES_API":"arn:aws:ssm:us-east-1:var.aws_account:parameter/REACT_APP_ES_API",
           "REACT_APP_ES_MLT_API":"arn:aws:ssm:us-east-1:var.aws_account:parameter/REACT_APP_ES_MLT_API",
           "REACT_APP_BACKEND_HOST":"arn:aws:ssm:us-east-1:var.aws_account:parameter/REACT_APP_BACKEND_HOST",
           "REACT_APP_SPOTLIGHT_COURSES":"arn:aws:ssm:us-east-1:var.aws_account:parameter/REACT_APP_SPOTLIGHT_COURSES"
         }
      ],
      "entryPoint":[
         "sh",
         "-c"
      ],
      "command":[
         "\"/opt/app/start-app.sh\""
      ]
   },
   {
      "name":"xds",
      "image":"openlxp/openlxp-xds:latest",
      "cpu":2,
      "memory":512,
      "essential":true,
      "portMappings":[
         {
            "containerPort":8100,
            "hostPort":8100,
            "protocol":"tcp"
         }
      ],
      "environmentVariables":[
         {
           "DB_NAME":"arn:aws:ssm:us-east-1:var.aws_account:parameter/XDS_DB_NAME",
           "DB_USER":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DB_USER",
           "DB_PASSWORD":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DB_PASSWORD",
           "DB_ROOT_PASSWORD":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DB_ROOT_PASSWORD",
           "DB_HOST":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DB_HOST",
           "DJANGO_SUPERUSER_USERNAME":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DJANGO_SUPERUSER_USERNAME",
           "DJANGO_SUPERUSER_PASSWORD":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DJANGO_SUPERUSER_PASSWORD",
           "DJANGO_SUPERUSER_EMAIL":"arn:aws:ssm:us-east-1:var.aws_account:parameter/DJANGO_SUPERUSER_EMAIL",
           "BUCKET_NAME":"arn:aws:ssm:us-east-1:var.aws_account:parameter/BUCKET_NAME",
           "AWS_ACCESS_KEY_ID"=
           "AWS_SECRET_ACCESS_KEY"=
           "AWS_DEFAULT_REGION":"arn:aws:ssm:us-east-1:var.aws_account:parameter/AWS_DEFAULT_REGION",
           "SECRET_KEY_VAL":"arn:aws:ssm:us-east-1:var.aws_account:parameter/SECRET_KEY_VAL",
           "ES_HOST":"arn:aws:ssm:us-east-1:var.aws_account:parameter/ES_HOST",
           "ES_INDEX":"arn:aws:ssm:us-east-1:var.aws_account:parameter/ES_INDEX",
         }
      ],
      "entryPoint":[
         "sh",
         "-c"
      ],
      "command":[
         "\"/opt/app/start-app.sh\""
      ]
   },
   {
      "name":"xia-db",
      "image":"mysql:5.7",
      "cpu":2,
      "memory":512,
      "essential":true,
      "portMappings":[
         {
            "containerPort":3306,
            "hostPort":3306,
            "protocol":"tcp"
         }
      ],
      "environmentVariables":[
         {
            "MYSQL_DATABASE":"arn:aws:ssm:us-east-1:var.aws_account:parameter/MYSQL_DATABASE",
            "MYSQL_PASSWORD":"arn:aws:ssm:us-east-1:var.aws_account:parameter/MYSQL_PASSWORD",
            "MYSQL_ROOT_PASSWORD":"arn:aws:ssm:us-east-1:var.aws_account:parameter/MYSQL_ROOT_PASSWORD",
            "MYSQL_USER":"arn:aws:ssm:us-east-1:var.aws_account:parameter/MYSQL_USER"
         }
      ]
   }
]
